# Maritime Monitor - Environment Configuration
# Copy this file to .env and fill in your API keys and credentials

# ========================
# MARITIME DATA SOURCES
# ========================

# AIS Vessel Tracking (Automatic Identification System)
VITE_AIS_ENDPOINT=https://api.aishub.net/v1/
VITE_AIS_API_KEY=your_aishub_key_here
VITE_MARINETRAFFIC_API_KEY=your_marinetraffic_key_here
VITE_VESSELFINDER_API_KEY=your_vesselfinder_key_here

# ========================
# WEATHER & ENVIRONMENTAL
# ========================

# NOAA (National Oceanic and Atmospheric Administration)
VITE_NOAA_ENDPOINT=https://api.weather.gov/
VITE_NOAA_API_KEY=your_noaa_key_if_required

# Weather.com / Weather API
VITE_WEATHER_API_KEY=your_weather_api_key
VITE_WEATHER_ENDPOINT=https://api.weatherapi.com/v1/

# Open-Meteo (Free, no key required)
VITE_OPENMETEO_ENDPOINT=https://api.open-meteo.com/v1/

# Marine Weather
VITE_MARINE_WEATHER_ENDPOINT=https://api.stormglass.io/v2/
VITE_STORMGLASS_API_KEY=your_stormglass_key

# ========================
# NEWS & INTELLIGENCE FEEDS
# ========================

# NewsAPI for maritime news aggregation
VITE_NEWS_API_KEY=your_newsapi_key
VITE_NEWS_API_ENDPOINT=https://newsapi.org/v2/

# Guardian API for news
VITE_GUARDIAN_API_KEY=your_guardian_key
VITE_GUARDIAN_ENDPOINT=https://open-platform.theguardian.com/

# RSS Feed URLs (comma-separated, no key required)
VITE_MARITIME_NEWS_RSS_FEEDS=https://www.hellenicshippingnews.com/feed/,https://www.seatrade-global.com/feed/,https://www.worldmaritimenews.com/feed/
VITE_PIRACY_ALERT_FEEDS=https://www.icc-ccs.org/feed,https://www.navalnews.com/feed/
VITE_POLICY_UPDATE_FEEDS=https://www.imo.org/feeds/rss.php
VITE_ENVIRONMENTAL_FEEDS=https://www.oceanweather.com/feed/

# ========================
# MARITIME ORGANIZATIONS
# ========================

# IMO (International Maritime Organization)
VITE_IMO_RSS_ENDPOINT=https://www.imo.org/en/MediaCentre/HotTopics/Pages/default.aspx
VITE_IMO_API_KEY=optional_key_if_available

# UN OCHA (Humanitarian Data)
VITE_OCHA_HUMANITARIAN_DATA=https://data.humdata.org/api/

# UNHCR (Refugee Data)
VITE_UNHCR_ENDPOINT=https://public.tableau.com/api/
VITE_UNHCR_API_KEY=optional_key_if_available

# ========================
# DATABASE CONFIGURATION
# ========================

# Redis (Optional - for caching)
VITE_REDIS_URL=redis://localhost:6379
VITE_REDIS_PASSWORD=optional_password

# PostgreSQL (Optional - for persistent storage)
VITE_DATABASE_URL=postgresql://user:password@localhost:5432/maritime_monitor
VITE_DB_HOST=localhost
VITE_DB_PORT=5432
VITE_DB_USER=maritime_user
VITE_DB_PASSWORD=secure_password
VITE_DB_NAME=maritime_monitor

# ========================
# MAPPING & VISUALIZATION
# ========================

# Mapbox (Optional - for enhanced mapping)
VITE_MAPBOX_API_TOKEN=your_mapbox_token

# Map Configuration
VITE_MAP_CENTER=0,20
VITE_MAP_ZOOM_LEVEL=2
VITE_MAP_STYLE=dark

# MapLibre (Open source alternative to Mapbox)
VITE_MAPLIBRE_STYLE_URL=https://demotiles.maplibre.org/style.json

# ========================
# LAYER CONFIGURATION
# ========================

# Layer Update Intervals (in milliseconds)
VITE_VESSEL_UPDATE_INTERVAL=60000
VITE_PIRACY_UPDATE_INTERVAL=3600000
VITE_WEATHER_UPDATE_INTERVAL=600000
VITE_REFUGEE_UPDATE_INTERVAL=7200000
VITE_POLICY_UPDATE_INTERVAL=86400000
VITE_TRADE_UPDATE_INTERVAL=3600000
VITE_PORT_UPDATE_INTERVAL=1800000

# Layer Visibility (true/false)
VITE_ENABLE_VESSEL_TRACKING=true
VITE_ENABLE_PIRACY_INCIDENTS=true
VITE_ENABLE_WEATHER_ALERTS=true
VITE_ENABLE_REFUGEE_TRACKING=true
VITE_ENABLE_POLICY_UPDATES=true
VITE_ENABLE_TRADE_ROUTES=true
VITE_ENABLE_PORT_STATUS=true
VITE_ENABLE_MARITIME_LAYER=true

# ========================
# APPLICATION SETTINGS
# ========================

# Environment
VITE_APP_ENV=development
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# Performance
VITE_TILE_CACHE_SIZE=100
VITE_MAX_FEATURES_PER_LAYER=10000
VITE_OPTIMIZE_FOR_LOW_END_DEVICES=false

# Timeouts (in milliseconds)
VITE_API_TIMEOUT=30000
VITE_DATA_FETCH_TIMEOUT=45000

# Analytics (Optional)
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=your_analytics_id

# ========================
# CORS & SECURITY
# ========================

# CORS Proxy (for bypassing CORS restrictions on RSS feeds)
VITE_CORS_PROXY=https://cors-anywhere.herokuapp.com/
VITE_USE_CORS_PROXY=true

# API Rate Limiting
VITE_ENABLE_RATE_LIMITING=true
VITE_RATE_LIMIT_REQUESTS_PER_MIN=60

# ========================
# DEPLOYMENT SETTINGS
# ========================

# Vercel/Production
VERCEL_ENV=development
NODE_ENV=development

# Application URL
VITE_APP_URL=http://localhost:5173
VITE_API_BASE_URL=http://localhost:5173

# ========================
# CONTACT & ATTRIBUTION
# ========================

VITE_APP_AUTHOR=Tom D'Eletto
VITE_APP_VERSION=1.0.0
VITE_REPORT_EMAIL=contact@example.com
